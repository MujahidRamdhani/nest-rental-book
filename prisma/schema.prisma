generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Member {
  code        String   @id @unique
  name        String
  borrowings  Borrowing[]
  penaltys     Penalty[]
}

model Book {
  code      String   @id @unique
  title     String
  author    String
  stock     Int
  borrowings Borrowing[]
}

model Borrowing {
  id         String   @id @default(uuid())
  memberCode String
  bookCode   String
  borrowedAt DateTime @default(now())
  returnedAt DateTime?
  stock_retreived Boolean  @default(false)
  member Member @relation(fields: [memberCode], references: [code])
  book   Book   @relation(fields: [bookCode], references: [code])
  penaltys     Penalty[]
}

model Penalty {
  id          String   @id @default(uuid())
  memberCode    String
  borrowingCode String  @unique
  issuedAt    DateTime @default(now())
  expiresAt   DateTime

  member    Member    @relation(fields: [memberCode], references: [code])
  borrowing Borrowing @relation(fields: [borrowingCode], references: [id])
}
